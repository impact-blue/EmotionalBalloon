<% @color.each do |color| %>
<li>
  <a>
    <div class="categoryWrapper">
      <p>色<%= color.id %>：<%= color.color %></p>
      <p><%= link_to '編集', "/colors/#{color.id}/edit" , method: :get ,class: "btn btn-primary"%>
      </p>
    </div>
  </a>
</li>
<% end %>

<li>
  <div class="categoryWrapper">
    <%= form_tag({controller: :colors, action: :create}) do %>
    色の追加
    <%= text_field_tag "color[color]", "", :id => "color" %><br />
    <%= submit_tag "作成" ,class: "btn btn-primary"%>
  </div>
  <% end -%>
</li>

