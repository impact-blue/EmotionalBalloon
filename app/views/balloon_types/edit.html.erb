
<ul class="p-categoryList u-mt-40">
  <li>
    <div class="categoryWrapper">
      <%= form_for([:admins, @balloon_type] , :url => {:action => 'update'}) do |f| %>
      <p>バルーンタイプの変更</p>
      <p>ID:<%= @balloon_type.id %></p>
      <%= f.text_field :id , class: 'form-control' %>
      <p>タイプ名:<%= @balloon_type.balloon_type %></p>
      <%= f.text_field :balloon_type , class: 'form-control' %>

      <%= f.submit :編集する , class: "btn btn-primary"%>
      <% end %>
    </div>
  </li>
</ul>
