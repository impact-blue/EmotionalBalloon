
<% if @product.errors.any? %>
<div>
<br/>
<br/>
<br/>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li style="color: red"><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<ul class="p-categoryList u-mt-40">
  <li>
    <div class="categoryWrapper">
      <p>商品の追加</p>
      <%= form_for([:admins, @product] , :url => {:action => 'create'}) do |f| %>

      <%= f.label :商品名 %>
      <%= f.text_field :name , class: 'form-control' %>

      <%= f.label :価格 %>
      <%= f.number_field :price , class: 'form-control' %>

      <%= f.label :在庫 %>
      <%= f.number_field :stocks , class: 'form-control' %>

      <%= f.label :コメント %>
      <%= f.text_field :comment , class: 'form-control' %>

      <%= f.label :推薦分 %>
      <%= f.text_area :recommended , class: 'form-control' %>

      <%= f.label :キーワード %>
      <%= f.text_field :keyword , class: 'form-control' %>

    </br>

    <%= f.label :シーン %>
    <br>
    <%= collection_check_boxes(:product, :scene_ids, Scene.all, :id, :name) do |b| %>
    <%= b.label {b.check_box + b.text } %>
    <% end %>
    <br>
    <br>
    <%= f.label :キャラクター %>
    <br>
    <%= collection_check_boxes(:product, :chara_ids, Chara.all, :id, :name) do |b| %>
    <%= b.label {b.check_box + b.text } %>
    <% end %>
    <br>
    <br>

    <%= f.label :色 %>
    <br>
    <%= collection_check_boxes(:product, :color_ids, Color.all, :id, :name) do |b| %>
    <%= b.label {b.check_box + b.text } %>
    <% end %>
    <br>
    <br>

    <%= f.label :バルーンの種類 %>
    <br>
    <%= collection_check_boxes(:product, :balloon_type_ids, BalloonType.all, :id, :balloon_type) do |b| %>
    <%= b.label {b.check_box + b.text } %>
    <% end %>
    <br>
    <br>

    <%= f.label :boxsize_id %>
    <%= f.collection_select :boxsize_id, Boxsize.all, :id, :name , class: 'form-control'%>
    <br>

    <%= f.label :公開日 %>
    <%= f.date_field :registration_date , class: 'form-control' %>

    <%= f.submit :商品登録する , class: "btn btn-primary"%>

      <!--  画像（複数)、送料の有無
    -->
    <% end %>
  </div>
</li>
</ul>