<%= render partial: 'header', locals: { admin_user: @admin_user } %>


<ul class="p-categoryList u-mt-40">
  <li>
    <div class="categoryWrapper">
      <p>商品の追加</p>
      <%= form_for([:admins, @product] , :url => {:action => 'update'}) do |f| %>
      <%= f.label :商品名 %>
      <%= f.text_field :product , class: 'form-control' %>

      <%= f.label :価格 %>
      <%= f.number_field :price , class: 'form-control' %>

      <%= f.label :在庫 %>
      <%= f.number_field :stocks , class: 'form-control' %>

      <%= f.label :送料の有無 %>
      <%= f.number_field :postage , class: 'form-control' %>

      <%= f.label :コメント %>
      <%= f.text_field :comment , class: 'form-control' %>

      <%= f.label :推薦分 %>
      <%= f.text_area :recommended , class: 'form-control' %>

      <%= f.label :キーワード %>
      <%= f.text_field :keyword , class: 'form-control' %>

      <%= f.label :箱サイズ %>
      <%= f.number_field :boxsize_id , class: 'form-control' %>

      <%= f.label :登録日 %>
      <%= f.date_field :registration_date , class: 'form-control' %>

      <%= f.submit :編集する , class: "btn btn-primary"%>
      <% end %>
    </div>
  </li>
</ul>
