<%= render partial: 'header', locals: { admin_user: @admin_user } %>


<ul class="admin-categoryList u-mt-40">
  <li>
      <div class="categoryWrapper">
        <p>商品一覧</p>
      </div>
    </a>
  </li>
  <% @product.each do |product| %>
  <li>
    <a>
      <div class="categoryIcon"><img src="<%= product.image %>" alt=""></div>
      <div class="categoryWrapper">
        <p><%= product.id %>商品名：<%= product.product %></p>
        <p>価格：<%= product.price %></p>
        <p>在庫：<%= product.stocks %></p>
        <p>送料の有無：<%= product.postage %></p>
        <p>コメント：<%= product.comment %></p>
        <p>推薦分：<%= product.recommended %></p>
        <p>キーワード：<%= product.keyword %></p>
        <p>箱サイズ：<%= product.boxsize.boxsize %></p>
        <p>商品登録日：<%= product.registration_date %></p>
        <p><%= link_to '編集', "/admin/#{product.id}/edit", method: :get ,class: "btn btn-primary"%> 
        <%= link_to '削除', "/admin/#{product.id}" , method: :delete , data: { confirm: '本当に削除しますか？' }, class: "btn btn-primary" %></p>
      </div>
    </a>
  </li>
  <% end %>
</ul>
