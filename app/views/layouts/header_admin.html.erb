

<!DOCTYPE html>
<html>
<head>
  <title>EmotionalBalloon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-route.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="./img/favicon.ico">
</head>
<body>
<header id="js-header">
        <ul class="header__menu">
            <li>管理画面</li>
            <li>
                <%= link_to '商品追加', new_admin_product_path %>
            </li>
            <li>
                <%= link_to '商品一覧', admin_products_path %>
            </li>
            <li>
                <%= link_to '購入者一覧', admin_customer_index_path %>
            </li>
            <li>
                <%= link_to 'バルーンオプションの追加', admin_balloon_options_path %>
            </li>
            <li>
            <% if logged_in? %>
                <%= link_to "ログアウト", { :controller => :sessions, :action => :destroy} %>
                 <% end %>
            </li>
            <li><input type="text" placeholder="結婚式 Balloon"><input type="submit" value="検索"></li>
        </ul>
</header>

<%= yield %>

</body>
</html>
