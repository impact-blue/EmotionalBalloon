<% include ../parts/_header %>
<div class="l-column-register" ng-controller="cartRegisterController">
    <div class="l-column-register__wrapper">
        <div class="l-column-register__head">
            <div class="p-registerForm">
                <div class="p-registerForm__block" ng-class="{'on': stepFlag === 1}">
                    <p class="p-registerForm__block__heading">購入手続き</p>
                    <ul class="p-registerForm__block__wrapper">
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">お名前</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="姓" ng-model="formContent.buyer_info.name[0].family_name">
                                <input type="text" placeholder="名" ng-model="formContent.buyer_info.name[0].first_name">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list">
                            <p class="p-registerForm__block__wrapper__list__text">連名</p>
                            <div class="p-registerForm__block__wrapper__list__content add">
                                <div ng-repeat="(i, name) in formModel.name">
                                    <input type="text" placeholder="姓" ng-model="formContent.buyer_info.name[i+1].family_name">
                                    <input type="text" placeholder="名" ng-model="formContent.buyer_info.name[i+1].first_name">
                                </div>
                                <p><span ng-click="addInput()">連名を追加する</span></p>
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">郵便番号</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="ハイフンなし数字7桁" ng-model="formContent.buyer_info.postal_code">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">都道府県</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="都道府県名" ng-model="formContent.buyer_info.prefectures">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">住所</p>
                            <div class="p-registerForm__block__wrapper__list__content address">
                                <input type="text" placeholder="市区町村、番地など" ng-model="formContent.buyer_info.address">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">電話番号</p>
                            <div class="p-registerForm__block__wrapper__list__content address">
                                <input type="text" placeholder="08012345678" ng-model="formContent.buyer_info.phone">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">メールアドレス</p>
                            <div class="p-registerForm__block__wrapper__list__content address">
                                <input type="text" placeholder="sample@sample.com" ng-model="formContent.buyer_info.mail">
                            </div>
                        </li>
                    </ul>
                    <p class="p-registerForm__block__heading u-mt-20">お届け先</p>
                    <ul class="p-registerForm__block__wrapper">
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">お名前</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="姓" ng-model="formContent.destination_info.name[0].family_name">
                                <input type="text" placeholder="名" ng-model="formContent.destination_info.name[0].first_name">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list">
                            <p class="p-registerForm__block__wrapper__list__text">連名</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="姓">
                                <input type="text" placeholder="名">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">郵便番号</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="ハイフンなし数字7桁" ng-model="formContent.destination_info.postal_code">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">都道府県</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="都道府県名" ng-model="formContent.destination_info.prefectures">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">住所</p>
                            <div class="p-registerForm__block__wrapper__list__content address">
                                <input type="text" placeholder="市区町村、番地など" ng-model="formContent.destination_info.address">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">電話番号</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <input type="text" placeholder="080" ng-model="formContent.destination_info.phone">
                            </div>
                        </li>
                        <li class="p-registerForm__block__wrapper__list">
                            <p class="p-registerForm__block__wrapper__list__text">届け希望日時</p>
                            <div class="p-registerForm__block__wrapper__list__content address">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" id="dropdown2" role="button" data-toggle="dropdown" data-target="#" href="#">
                                        <div class="input-group"><input type="text" class="form-control" data-ng-model="data.dateDropDownInput" placeholder="Fri Jan 01 2016 00:00:00 GMT+0900 (JST)"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span></div>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <datetimepicker data-ng-model="data.dateDropDownInput" data-datetimepicker-config="{ dropdownSelector: '#dropdown2' }"/>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <p class="p-registerForm__block__heading u-mt-20">お支払い方法</p>
                    <ul class="p-registerForm__block__wrapper">
                        <li class="p-registerForm__block__wrapper__list required">
                            <p class="p-registerForm__block__wrapper__list__text">お支払い方法</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <p class="p-registerForm__block__wrapper__list__content__radio">
                                    <input type="radio" name="credit" id="credit1" placeholder=""><label for="credit1">代金引換</label>
                                </p>
                                <p class="p-registerForm__block__wrapper__list__content__radio">
                                    <input type="radio" name="credit" id="credit2" placeholder=""><label for="credit2">銀行</label>
                                </p>
                                <p class="p-registerForm__block__wrapper__list__content__radio">
                                    <input type="radio" name="credit" id="credit3" placeholder=""><label for="credit3">クレジットカード</label>
                                </p>
                            </div>
                        </li>
                    </ul>
                    <p class="p-registerForm__block__heading u-mt-20">その他</p>
                    <ul class="p-registerForm__block__wrapper">
                        <li class="p-registerForm__block__wrapper__list">
                            <p class="p-registerForm__block__wrapper__list__text">備考</p>
                            <div class="p-registerForm__block__wrapper__list__content">
                                <textarea name=""></textarea>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="l-column-register__foot">
            <div class="l-column-register__foot__wrapper">
                <div class="l-column-register__foot__wrapper__button" ng-class="{'on': stepFlag !== 1}" ng-click="prevForm()"><i class="fa fa-arrow-left"></i></div>
                <div class="l-column-register__foot__wrapper__button" ng-click="nextForm()">
                    <p class="l-column-register__foot__wrapper__button__text">注文を確認する</p>
                </div>
                <!-- <div class="l-column-register__foot__wrapper__button on" ng-click="sendCart()">
                    <div class="l-column-register__foot__wrapper__button__progress" style="width: 100%;"></div>
                    <p class="l-column-register__foot__wrapper__button__text">注文を確定する</p>
                </div> -->
            </div>
        </div>
    </div>
</div>
<% include ../parts/_footer %>