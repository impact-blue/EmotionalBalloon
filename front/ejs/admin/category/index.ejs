<% include ../parts/_header %>
<ul class="l-admin__right__foot__content__list">
    <li ng-class="{'on': search === '?filter=all'}"><a href="/admin/categories?filter=all">すべて</a></li>
    <li ng-class="{'on': search === '?filter=scene'}"><a href="/admin/categories?filter=scene">シーン</a></li>
    <li ng-class="{'on': search === '?filter=character'}"><a href="/admin/categories?filter=character">キャラクター</a></li>
</ul>
<div class="l-admin__right__foot__content__body">
    <div class="c-buttonList">
        <p class="c-buttonList__list"><a href="">CSV出力</a></p>
        <p class="c-buttonList__list">CSVインポート</p>
        <p class="c-buttonList__list"><a href="">新規登録</a></p>
    </div>
    <table class="c-table">
        <thread class="c-table__thread">
            <tr class="c-table__thread__row">
                <th class="c-table__thread__row__head">ID</th>
                <th class="c-table__thread__row__head">Type</th>
                <th class="c-table__thread__row__head">名称 (English)</th>
                <th class="c-table__thread__row__head">名称 (Japanese)</th>
                <th class="c-table__thread__row__head">作成日</th>
                <th class="c-table__thread__row__head">詳細</th>
            </tr>
        </thread>
        <tbody class="c-table__body">
            <tr class="c-table__body__row" ng-repeat="category in data.category_list">
                <td class="c-table__body__row__data">{{category.id}}</td>
                <td class="c-table__body__row__data">{{category.type}}</td>
                <td class="c-table__body__row__data">{{category.name_en}}</td>
                <td class="c-table__body__row__data">{{category.name_jp}}</td>
                <td class="c-table__body__row__data">{{category.created_at}}</td>
                <td class="c-table__body__row__data">
                    <div class="c-button--detail">
                        <p class="c-button--detail__text"><a href="/admin/categories/{{category.type}}/{{category.id}}/edit">詳細を見る</a></p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<% include ../parts/_footer %>