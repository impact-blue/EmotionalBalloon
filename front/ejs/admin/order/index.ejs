<% include ../parts/_header %>
<ul class="l-admin__right__foot__content__list">
    <li ng-class="{'on': search === '?filter=all'}"><a href="/admin/orders?filter=all">すべて</a></li>
    <li ng-class="{'on': search === '?filter=unconfirmed'}"><a href="/admin/orders?filter=unconfirmed">未入金</a></li>
    <li ng-class="{'on': search === '?filter=process'}"><a href="/admin/orders?filter=process">未発送</a></li>
    <li ng-class="{'on': search === '?filter=complete'}"><a href="/admin/orders?filter=complete">完了</a></li>
</ul>
<div class="l-admin__right__foot__content__body">
    <div class="c-buttonList">
        <p class="c-buttonList__list"><a href="">CSV出力</a></p>
        <p class="c-buttonList__list">CSVインポート</p>
    </div>
    <table class="c-table">
        <thread class="c-table__thread">
            <tr class="c-table__thread__row">
                <th class="c-table__thread__row__head">ID</th>
                <th class="c-table__thread__row__head">お名前</th>
                <th class="c-table__thread__row__head">支払い方法</th>
                <th class="c-table__thread__row__head">購入金額</th>
                <th class="c-table__thread__row__head">対応状況</th>
                <th class="c-table__thread__row__head">受注日</th>
                <th class="c-table__thread__row__head">詳細</th>
            </tr>
        </thread>
        <tbody class="c-table__body">
            <tr class="c-table__body__row" ng-repeat="order in data.order_list">
                <td class="c-table__body__row__data">{{order.id}}</td>
                <td class="c-table__body__row__data">{{order.family_name}} {{order.first_name}}</td>
                <td class="c-table__body__row__data">{{order.payment_info.method}}</td>
                <td class="c-table__body__row__data">¥{{order.price}}</td>
                <td class="c-table__body__row__data">{{order.status}}</td>
                <td class="c-table__body__row__data">{{order.created_at}}</td>
                <td class="c-table__body__row__data">
                    <div class="c-button--detail">
                        <p class="c-button--detail__text"><a href="/admin/orders/{{order.id}}/edit">詳細を見る</a></p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<% include ../parts/_footer %>