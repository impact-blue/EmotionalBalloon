<% include ../parts/_header %>
<ul class="l-admin__right__foot__content__list">
    <li ng-class="{'on': query.status === 'all'}"><a href="/admin/contacts?status=all">すべて</a></li>
    <li ng-class="{'on': query.status === 'uncomplete'}"><a href="/admin/contacts?status=uncomplete">未対応</a></li>
    <li ng-class="{'on': query.status === 'complete'}"><a href="/admin/contacts?status=complete">対応済み</a></li>
</ul>
<div class="l-admin__right__foot__content__body">
    <div class="c-buttonList">
        <div class="c-buttonList__left"></div>
        <div class="c-buttonList__right">
            <p class="c-buttonList__right__list"><a href="">CSV出力</a></p>
            <p class="c-buttonList__right__list">CSVインポート</p>
        </div>
    </div>
    <table class="c-table">
        <thread class="c-table__thread">
            <tr class="c-table__thread__row">
                <th class="c-table__thread__row__head">ID</th>
                <th class="c-table__thread__row__head">ステータス</th>
                <th class="c-table__thread__row__head">お名前</th>
                <th class="c-table__thread__row__head">件名</th>
                <th class="c-table__thread__row__head">作成日</th>
                <th class="c-table__thread__row__head">更新日</th>
                <th class="c-table__thread__row__head">詳細</th>
            </tr>
        </thread>
        <tbody class="c-table__body">
            <tr class="c-table__body__row" ng-repeat="contact in data.contact_list.contacts">
                <td class="c-table__body__row__data">{{contact.id}}</td>
                <td class="c-table__body__row__data">{{contact.status}}</td>
                <td class="c-table__body__row__data">{{contact.name}}</td>
                <td class="c-table__body__row__data">{{contact.subject}}</td>
                <td class="c-table__body__row__data">{{contact.created_at}}</td>
                <td class="c-table__body__row__data">{{contact.updated_at}}</td>
                <td class="c-table__body__row__data">
                    <div class="c-button--detail">
                        <p class="c-button--detail__text"><a href="/admin/contacts/{{contact.id}}/edit">詳細を見る</a></p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <balloon-next-button class="u-mt-10" url="/admin/contacts" max="data.contact_list.max_page" current="data.contact_list.current_page"></balloon-next-button>
</div>
<% include ../parts/_footer %>