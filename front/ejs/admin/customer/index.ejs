<% include ../parts/_header %>
<div class="l-admin__right__foot__content__full">
    <div class="c-buttonList">
        <p class="c-buttonList__list"><a href="">CSV出力</a></p>
        <p class="c-buttonList__list">CSVインポート</p>
    </div>
    <table class="c-table">
        <thead class="c-table__thread">
            <tr class="c-table__thread__row">
                <th class="c-table__thread__row__head">ID</th>
                <th class="c-table__thread__row__head">お名前</th>
                <th class="c-table__thread__row__head">電話番号</th>
                <th class="c-table__thread__row__head">メールアドレス</th>
                <th class="c-table__thread__row__head">詳細</th>
            </tr>
        </thead>
        <tbody class="c-table__body">
            <tr class="c-table__body__row" ng-repeat="customer in data.customer_list.customers">
                <td class="c-table__body__row__data">{{customer.id}}</td>
                <td class="c-table__body__row__data">{{customer.family_name}} {{customer.first_name}}</td>
                <td class="c-table__body__row__data">{{customer.phone}}</td>
                <td class="c-table__body__row__data">{{customer.email}}</td>
                <td class="c-table__body__row__data">
                    <div class="c-button--detail">
                        <p class="c-button--detail__text"><a href="">詳細を見る</a></p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <ul class="c-nextButton u-mt-10">
        <li class="c-nextButton__list">
            <a href="/admin/customers?page={{data.customer_list.current_page - 1}}" ng-if="data.customer_list.current_page > 1"><p class="c-nextButton__list__button"><i class="fa fa-arrow-left"></i> 前のページ</p></a>
        </li>
        <li class="c-nextButton__list ng-binding">{{data.customer_list.current_page}} / {{data.customer_list.max_page}}</li>
        <li class="c-nextButton__list">
            <a href="/admin/customers?page={{data.customer_list.current_page + 1}}" ng-if="data.customer_list.current_page !== data.customer_list.max_page"><p class="c-nextButton__list__button">次のページ <i class="fa fa-arrow-right"></i></p></a>
        </li>
    </ul>
</div>
<% include ../parts/_footer %>